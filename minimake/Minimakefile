CC       = gcc
CFLAGS   = -std=c99 -pedantic -Werror -Wall -Wextra -Wvla
SRC      = src/main.c src/parser.c src/builder.c src/aux_builder.c src/micro_shell.c
BIN      = minimake

.PHONY: all clean rebuild

all: $(BIN)

$(BIN): $(SRC)
	$(CC) $(CFLAGS) $(SRC) -o $(BIN)
	@echo "Haru Urara da best horse"

clean:
	$(RM) $(BIN) rule.txt
	@echo "You killed the child uma, u bad human!"


